{
  "name": "mapr-node",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "users": {
      "singleusers": ["mapr"]
    },
    "authorization": {
      "sudo": {
        "users": ["mapr", "vagrant", "cloud-user"],
        "passwordless": true
      }
    }
  },
  "run_list": [
    "recipe[gdp-base-linux]",    
    "recipe[mapr_installation::default]"
  ]
}
