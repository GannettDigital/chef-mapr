{
  "name": "mapr-node",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "yum": {
      "base": {
        "enabled": false
      },
      "contrib": {
        "enabled": false
      },
      "extras": {
        "enabled": false
      },
      "centosplus": {
        "enabled": false
      },
      "updates": {
        "enabled": false
      },
      "gmti_base": {
        "enabled": false
      }
    },
    "splunk": {
      "client-name": {
        "production": "GD-GDP-PROD-DATALAKE-LX",
        "staging": "GD-GDP-STAGE-DATALAKE-LX",
        "development": "GD-GDP-DEV-DATALAKE-LX"
      }
    },
    "users": {
      "singleusers": ["mapr"]
    },
    "authorization": {
      "sudo": {
        "users": ["mapr", "vagrant", "cloud-user"],
        "passwordless": true
      }
    }
  },
  "run_list": [
    "recipe[users]",
    "recipe[sudo]",
    "recipe[ssh-keys]",
    "recipe[yum-gmti::default]",
    "recipe[mapr_installation::default]"
  ]
}
